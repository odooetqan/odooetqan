<!-- views/resource_calendar_multi_views.xml -->
<odoo>
    <record id="view_resource_calendar_multi_tree" model="ir.ui.view">
        <field name="name">resource.calendar.multi.tree</field>
        <field name="model">resource.calendar.multi</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="calendar_id"/>
                <field name="employee_ids"/>
            </tree>
        </field>
    </record>

    <record id="view_resource_calendar_multi_form" model="ir.ui.view">
        <field name="name">resource.calendar.multi.form</field>
        <field name="model">resource.calendar.multi</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="calendar_id"/>
                        <field name="employee_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_resource_calendar_multi" model="ir.actions.act_window">
        <field name="name">Employee Calendars</field>
        <field name="res_model">resource.calendar.multi</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_resource_calendar_multi"
              name="Employee Calendars"
              parent="hr.menu_hr_root"
              action="action_resource_calendar_multi"
              sequence="30"/>
</odoo>
