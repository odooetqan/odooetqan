<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="portal_hr_loan_page" inherit_id="portal.portal_my_home" name="My Loans">
            <xpath expr="//div[@class='o_portal_my_home']" position="inside">
                <a class="btn btn-primary" href="/my/loans">طلباتي للسلف </a>
            </xpath>
        </template>

        <template id="portal_my_home_loan" inherit_id="portal.portal_my_home" priority="12">
            <xpath expr="//div[@id='portal_client_category']" position="inside">
                <div class="o_portal_index_card col-md-6" style="background-color:green">
                    <a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between"
                    href="/my/loans" title="Loan">
                        <img width="150px" src="/portal_hr_loan/static/description/loan.svg" loading="lazy"/>
                        السلف
                        <span class="badge text-bg-secondary rounded-pill">
                            <i class="fa fa-sign-in"></i>
                        </span>
                    </a>
                </div>
            </xpath>
        </template>

        <template id="portal_hr_loan_list" name="Loan List">
            <t t-call="portal.portal_layout">
                <div class="container">
                    <h1>طلباتي للسلف </h1>
                    <a class="btn btn-success mb-3" href="/my/loans/new">طلب سلفة جديدة</a>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>الاسم </th>
                                <th>قيمة السلفة</th>
                                <th>القســـــط</th>
                                <th>الرصيد</th>
                                <th>الحالة</th>
                                <th>التاريخ</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="loans" t-as="loan">
                                <tr>
                                    <td><t t-esc="loan.name"/></td>
                                    <td><t t-esc="loan.loan_amount"/></td>
                                    <td><t t-esc="loan.installment"/></td>
                                    <td><t t-esc="loan.balance_amount"/></td>
                                    <td><t t-esc="loan.state"/></td>
                                    <td><t t-esc="loan.date"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </template>


