<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Main Approval Portal Form -->
        <template id="portal_approval_form" name="Approval Portal Form">
            <t t-call="portal.portal_layout">
                <div class="container my-5">
                    <h2 class="text-center">طلبات الموارد البشرية</h2>

                    <!-- Approval Form -->
                    <form id="approvalForm" action="/my/approval/submit" method="post" enctype="multipart/form-data">
                        <!-- Category Selection -->
                        <div class="form-group mb-3">
                            <label for="category_id" class="form-label">الفئة: *</label>
                            <select name="category_id" id="category_id" class="form-select" required="true">
                                <option value="" >اختر الفئة</option>
                                <t t-foreach="categories" t-as="category">
                                    <option t-att-value="category.id">
                                        <t t-esc="category.name" />
                                    </option>
                                </t>
                            </select>
                        </div>

                        <!-- Dynamic Fields -->
                        <div id="dynamic_fields"></div>

                        <!-- Description Field -->
                        <div class="form-group mb-3">
                            <label for="description" class="form-label">الوصف *</label>
                            <textarea name="description" class="form-control" required="true"></textarea>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary mt-3">إرسال</button>
                    </form>
                </div>
            </t>
        </template>

