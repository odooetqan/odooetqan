<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="dynamic_fields_template">
            <t t-if="req">
                <t t-if="req.has_date == 'required'">
                    <div class="form-group mb-3">
                        <label for="date_from" class="form-label">من</label>
                        <input type="datetime-local" name="date_from" class="form-control"/>
                    </div>
                    <div class="form-group mb-3">
                        <label for="date_to" class="form-label">إلى</label>
                        <input type="datetime-local" name="date_to" class="form-control"/>
                    </div>
                </t>
                <t t-if="req.has_document == 'required'">
                    <div class="form-group mb-3">
                        <label for="document" class="form-label">المستند</label>
                        <input type="file" name="document" class="form-control"/>
                    </div>
                </t>
                <!-- <t t-if="req.has_amount == 'required'"> -->
                    <div class="form-group mb-3">
                        <label for="amount" class="form-label">المبلغ</label>
                        <input type="number" name="amount" class="form-control"/>
                    </div>
                <!-- </t> -->
            </t>
        </template>

    </data>
</odoo>
