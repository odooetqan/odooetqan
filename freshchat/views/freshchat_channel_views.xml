<odoo>
  <record id="view_freshchat_channel_tree" model="ir.ui.view">
    <field name="name">freshchat.channel.tree</field>
    <field name="model">freshchat.channel</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="external_id"/>
        <field name="enabled"/>
        <field name="public"/>
        <field name="tag_ids"/>
      </tree>
    </field>
  </record>

  <record id="view_freshchat_channel_form" model="ir.ui.view">
    <field name="name">freshchat.channel.form</field>
    <field name="model">freshchat.channel</field>
    <field name="arch" type="xml">
      <form>
        <group>
          <field name="name"/>
          <field name="external_id"/>
          <field name="enabled"/>
          <field name="public"/>
          <field name="tag_ids"/>
        </group>
      </form>
    </field>
  </record>

  <menuitem id="menu_freshchat_channel" name="Channels" parent="menu_freshchat_root" action="action_freshchat_channel"/>

  <record id="action_freshchat_channel" model="ir.actions.act_window">
    <field name="name">Freshchat Channels</field>
    <field name="res_model">freshchat.channel</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>