<odoo>
   <record id="view_payslip_export_wizard_form" model="ir.ui.view">
        <field name="name">payslip.export.wizard.form</field>
        <field name="model">payslip.export.wizard</field>
        <field name="arch" type="xml">
            <form string="Export Payslip Excel">
                <group>
                    <footer>
                        <button name="generate_excel" type="object" string="Generate Excel" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </group>
                <p>تنزيل الملف هنا </p>
                <button string="Download" class="btn-success" />
                <field name="file_data" widget="binary" filename="file_name" invisible="not file_data"/>

<!-- 
                <t t-if="record.file_data.raw_value">
                    <div class="mt16">
                        <p>Click to download your file:</p>
                        <field name="file_data" filename="file_name"/>
                    </div>
                </t> -->
            </form>
        </field>
    </record>

</odoo>
