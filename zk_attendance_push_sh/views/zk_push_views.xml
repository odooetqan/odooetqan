<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- tree view -->
  <record id="view_zk_attendance_push_job_tree" model="ir.ui.view">
    <field name="name">zk.attendance.push.job.tree</field>
    <field name="model">zk.attendance.push.job</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="state"/>
        <field name="days_back"/>
        <field name="last_run"/>
        <field name="created_count"/>
        <field name="skipped_no_employee"/>
        <field name="skipped_duplicates"/>
        <field name="errors_count"/>
      </tree>
    </field>
  </record>

  <!-- Form view -->
  <record id="view_zk_attendance_push_job_form" model="ir.ui.view">
    <field name="name">zk.attendance.push.job.form</field>
    <field name="model">zk.attendance.push.job</field>
    <field name="arch" type="xml">
      <form string="ZK Attendance Push Job">
        <header>
          <button name="action_run" type="object" string="Run Now" class="btn-primary"
                  invisible="state =='running'"/>
          <field name="state" widget="statusbar" statusbar_visible="draft,running,done,failed"/>
        </header>
        <sheet>
          <group>
            <field name="name" readonly="1"/>
            <field name="days_back"/>
            <field name="last_run" readonly="1"/>
          </group>
          <group>
            <field name="created_count" readonly="1"/>
            <field name="skipped_no_employee" readonly="1"/>
            <field name="skipped_duplicates" readonly="1"/>
            <field name="errors_count" readonly="1"/>
          </group>
          <group>
            <field name="log" nolabel="1" widget="text" readonly="1" style="height:380px;"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Action -->
  <record id="action_zk_attendance_push_jobs" model="ir.actions.act_window">
    <field name="name">ZK Attendance Push Jobs</field>
    <field name="res_model">zk.attendance.push.job</field>
    <field name="view_mode">tree,form</field>
  </record>

  <!-- Root menu under HR -->
  <menuitem id="menu_zk_push_root" name="ZK Attendance Push" parent="hr.menu_hr_root" sequence="90"/>
  <!-- Jobs menu -->
  <menuitem id="menu_zk_push_jobs" name="Jobs" parent="menu_zk_push_root"
            action="action_zk_attendance_push_jobs" sequence="10"/>



             

  <!-- Root menu under HR -->
  <menuitem id="menu_zk_push_root_attendance" name="ZK Attendance Push"  parent="hr_attendance.menu_hr_attendance_root" sequence="22"/>
  <!-- Jobs menu -->
  <menuitem id="menu_zk_push_jobs" name="Jobs" parent="menu_zk_push_root_attendance"
            action="action_zk_attendance_push_jobs" sequence="10"/>

</odoo>
