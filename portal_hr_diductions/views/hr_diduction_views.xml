<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        
      <!-- Diduction LISt -->
      <template id="portal_my_home_diduction" inherit_id="portal.portal_my_home" priority="10">
         <xpath expr="//div[@id='portal_client_category']" position="inside">
            <div class="o_portal_index_card col-md-6">
               <a href="/my/diductions" title="Diduction"
                class="d-flex justify-content-start gap-2 align-items-center py-3 px-3 rounded text-decoration-none text-reset text-bg-light text-bg-danger">               
               <img width="50px" src="/portal_hr_diductions/static/description/icons/diduction.svg" loading="lazy"/>
               الخصومات
               <span class="badge text-bg-secondary rounded-pill">
               <!--<i class="fa fa-sign-in"></i>-->
               </span>
               </a>
            </div>
         </xpath>
      </template>
      <template id="portal_my_diductions" name="Diductions List">
         <t t-call="portal.portal_layout">
            <div class="container">
               <h3></h3>
               <table class="table table-striped">
                  <thead>
                     <tr>
                        <th>الاسم</th>
                        <th>التاريخ</th>
                        <th>بداية الدوام</th>
                        <th>نهاية الدوام</th>
                        <th>وقت الدخول</th>
                        <th>وقت الخروج</th>
                        <th>دقائق التأخير</th>
                        <th>دقائق الخروج المبكر</th>
                        <th>الغياب</th>
                        <th>قيمة الخصم</th>
                        <th>الحالة</th>
                     </tr>
                  </thead>
                  <tbody>
                     <t t-foreach="diductions" t-as="diduction">
                        <tr>
                           <td><t  t-esc="diduction.employee_id.name"/></td>
                           <td><t  t-esc="diduction.date"/></td>
                           <td><t  t-esc="diduction.shift_start"/></td>
                           <td><t  t-esc="diduction.shift_end"/></td>
                           <td><t  t-esc="diduction.check_in"/></td>
                           <td><t  t-esc="diduction.check_out"/></td>
                           <td><t  t-esc="diduction.late_minutes"/></td>
                           <td><t  t-esc="diduction.early_leave_minutes"/></td>
                           <td><t  t-esc="diduction.absent"/></td>
                           <td><t  t-esc="diduction.deducted_amount"/></td>
                           <td><t  t-esc="diduction.state"/></td>
                           <td>
                              <!-- <t t-esc="diduction.description or ''" /> -->
                           </td>
                        </tr>
                     </t>
                  </tbody>
               </table>
            </div>
         </t>
      </template>
      
</odoo>












