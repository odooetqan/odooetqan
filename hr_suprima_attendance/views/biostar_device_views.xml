<odoo>
  <record id="view_biostar_device_tree" model="ir.ui.view">
    <field name="name">biostar.device.tree</field>
    <field name="model">biostar.device</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="base_url"/>
        <field name="device_ip"/>
        <field name="status"/>
        <field name="status_message"/>
        <field name="last_user_sync"/>
        <field name="last_event_sync"/>
        <field name="active"/>
      </tree>
    </field>
  </record>

  <record id="view_biostar_device_form" model="ir.ui.view">
    <field name="name">biostar.device.form</field>
    <field name="model">biostar.device</field>
    <field name="arch" type="xml">
      <form string="BioStar Device">
        <header>
          <button name="action_test_connection" type="object" string="Test Connection" class="oe_highlight"/>
          <button name="action_import_users" type="object" string="Import Users"/>
          <button name="action_pull_events" type="object" string="Pull Events "/>
          <field name="status" widget="statusbar" statusbar_visible="unknown,ok,error"/>
        </header>
        <sheet>
          <group>
            <group>
              <field name="name"/>
              <field name="base_url"/>
              <field name="device_ip"/>
              <field name="timezone"/>
              <field name="active"/>
            </group>
            <group>
              <field name="username"/>
              <field name="password" password="True"/>
              <field name="verify_ssl"/>
              <field name="token" readonly="1"/>
              <field name="token_expires" readonly="1"/>
            </group>
          </group>
          <group>
            <field name="status_message" readonly="1"/>
          </group>
          <notebook>
            <page string="Users">
              <field name="user_ids">
                <tree editable="bottom">
                  <field name="name"/>
                  <field name="biostar_user_id"/>
                  <field name="card_no"/>
                  <field name="employee_id"/>
                </tree>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <!-- <record id="action_biostar_devices" model="ir.actions.act_window">
    <field name="name">BioStar Devices</field>
    <field name="res_model">biostar.device</field>
    <field name="view_mode">tree,form</field>
  </record> -->
</odoo>
