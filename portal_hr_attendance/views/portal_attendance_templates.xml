<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- 1) Portal My Attendance Page -->
        <template id="portal_my_attendance_check" name="Portal My Attendance">
            <t t-call="portal.portal_layout">
                <div class="container mt-5 mb-5">
                    <h2 class="text-center mb-4">Check In or Check Out</h2>
                    <div class="text-center">
                        <h3>Hi <t t-esc="employee_name"/>!</h3>
                        <p>Today's hours: <t t-esc="total_hours"/></p>

                        <t t-if="is_checked_in">
                            <button  width="250px" height="250px"  type="button" class="btn btn-danger btn-lg btn-attendance-toggle">
                                Click here to sign out
                                <i width="250px" height="250px" class="fa fa-sign-in" aria-hidden="true"></i>
                            </button>
                        </t>
                        <t t-if="is_checked_out">
                            <button  width="250px" height="250px"  type="button" class="btn btn-success btn-lg btn-attendance-toggle">
                                Click here to sign in
                                <i width="250px" height="250px" class="fa fa-sign-in" aria-hidden="true"></i>
                            </button>
                        </t>


                        <!-- <t t-if="is_checked_in">
                            <button type="button" class="btn btn-danger btn-lg" t-att-onclick="'toggleAttendance()'">
                                <span>Click here to sign out</span>
                            </button>
                        </t>
                        <t t-if="is_checked_out">
                            <button type="button" class="btn btn-primary btn-lg" t-att-onclick="'toggleAttendance()'">
                                <span>Click here to sign in</span>
                            </button>
                        </t> -->
                    </div>
                </div>
            </t>
        </template>

